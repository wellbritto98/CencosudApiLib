{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/CencosudApiLib.Web/bin/Debug/net8.0/CencosudApiLib.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/CencosudApiLib.Web",
      "stopAtEntry": false,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "launchBrowser": {
        "enabled": true,
        "args": "https://localhost:7225/swagger/index.html", // Abrir diretamente o Swagger
        "windows": {
          "command": "cmd.exe",
          "args": "/C start https://localhost:7225/swagger/index.html"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/CencosudApiLib.Web/Views"
      }
    }
  ]
}
